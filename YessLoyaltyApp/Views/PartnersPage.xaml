<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YessLoyaltyApp.Views.PartnersPage"
             Title="Партнёры"
             BackgroundColor="#007A51">

    <Grid RowDefinition="Auto,Auto,*,Auto" 
          Padding="16" 
          RowSpacing="16" 
          BackgroundColor="Transparent">
        
        <!-- Gradient Background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#007A51" Offset="0.0"/>
                <GradientStop Color="#00945E" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Search Bar -->
        <Border Grid.Row="0" 
                BackgroundColor="White" 
                Stroke="Transparent" 
                StrokeShape="RoundRectangle 20"
                HeightRequest="48">
            <Grid ColumnDefinition="*,Auto" Padding="16,0">
                <Entry Placeholder="Поиск" 
                       Grid.Column="0"
                       VerticalOptions="Center"
                       BackgroundColor="Transparent"
                       FontSize="16"/>
                <Image Grid.Column="1" 
                       Source="search_icon.png" 
                       WidthRequest="24" 
                       HeightRequest="24"
                       VerticalOptions="Center"/>
            </Grid>
        </Border>

        <!-- Category Buttons -->
        <HorizontalStackLayout Grid.Row="1" 
                                Spacing="8" 
                                HorizontalOptions="Center">
            <Button Text="Красота" 
                    Style="{StaticResource CategoryButtonStyle}"
                    BackgroundColor="White"
                    TextColor="#007A51"/>
            <Button Text="Еда и напитки" 
                    Style="{StaticResource CategoryButtonStyle}"
                    BackgroundColor="White"
                    TextColor="#007A51"/>
            <Button Text="Продукты" 
                    Style="{StaticResource CategoryButtonStyle}"
                    BackgroundColor="White"
                    TextColor="#007A51"/>
        </HorizontalStackLayout>

        <!-- Partners List -->
        <ScrollView Grid.Row="2" 
                    Margin="0,16,0,16">
            <VerticalStackLayout Spacing="12">
                <Border Style="{StaticResource PartnerCardStyle}">
                    <Grid ColumnDefinition="Auto,*,Auto" Padding="12">
                        <Image Grid.Column="0" 
                               Source="pharmacmir_logo.png" 
                               WidthRequest="56" 
                               HeightRequest="56"
                               Aspect="AspectFit"/>
                        <VerticalStackLayout Grid.Column="1" Padding="12,0">
                            <Label Text="Фармамир" 
                                   FontAttributes="Bold" 
                                   FontSize="16"/>
                            <Label Text="Здоровье и красота" 
                                   TextColor="Gray" 
                                   FontSize="14"/>
                        </VerticalStackLayout>
                        <Label Grid.Column="2" 
                               Text="до 1%" 
                               TextColor="#007A51" 
                               FontAttributes="Bold" 
                               VerticalOptions="Center"/>
                    </Grid>
                </Border>
                
                <!-- Repeat similar Border/Grid for other partners -->
                <!-- Add more partner cards here -->
            </VerticalStackLayout>
        </ScrollView>

        <!-- Bottom Navigation -->
        <Border Grid.Row="3" 
                BackgroundColor="White" 
                StrokeShape="RoundRectangle 30" 
                HeightRequest="70">
            <HorizontalStackLayout HorizontalOptions="Center" 
                                   Spacing="24" 
                                   VerticalOptions="Center">
                <VerticalStackLayout>
                    <Image Source="home_icon.png" 
                           WidthRequest="24" 
                           HeightRequest="24"/>
                    <Label Text="Главная" FontSize="12"/>
                </VerticalStackLayout>
                <VerticalStackLayout>
                    <Image Source="partners_icon.png" 
                           WidthRequest="24" 
                           HeightRequest="24"
                           Tint="#007A51"/>
                    <Label Text="Партнёры" 
                           FontSize="12" 
                           TextColor="#007A51"/>
                </VerticalStackLayout>
                <VerticalStackLayout>
                    <Image Source="qr_icon.png" 
                           WidthRequest="24" 
                           HeightRequest="24"/>
                    <Label Text="QR" FontSize="12"/>
                </VerticalStackLayout>
                <VerticalStackLayout>
                    <Image Source="notifications_icon.png" 
                           WidthRequest="24" 
                           HeightRequest="24"/>
                    <Label Text="Уведомления" FontSize="12"/>
                </VerticalStackLayout>
                <VerticalStackLayout>
                    <Image Source="more_icon.png" 
                           WidthRequest="24" 
                           HeightRequest="24"/>
                    <Label Text="Ещё" FontSize="12"/>
                </VerticalStackLayout>
            </HorizontalStackLayout>
        </Border>
    </Grid>
</ContentPage>
