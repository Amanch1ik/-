# Конфигурация базы данных
DATABASE_URL=postgresql://user:password@localhost/yess_loyalty
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Настройки Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Параметры безопасности
JWT_SECRET_KEY=your_super_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Настройки приложения
APP_NAME=YESS Loyalty System
APP_ENVIRONMENT=development
DEBUG=True

# Мониторинг и логирование
SENTRY_DSN=
PROMETHEUS_PORT=9090

# Внешние сервисы
GEOLOCATION_API_KEY=
PAYMENT_GATEWAY_URL=https://sandbox-payment-gateway.com/api

# Настройки email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_USE_TLS=True

# Настройки безопасности
CORS_ORIGINS=http://localhost:3000,https://yess-loyalty.com
ALLOWED_HOSTS=localhost,127.0.0.1,yess-loyalty.com

# Параметры кэширования
CACHE_DEFAULT_TIMEOUT=300  # 5 минут
CACHE_PARTNER_TIMEOUT=1800  # 30 минут

# Настройки для тестирования
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost/yess_loyalty_test
